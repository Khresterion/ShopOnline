{% extends 'base.html.twig' %}

{% block title %}Nos produits{% endblock %}

{% block content %}

<div class="row">
    <div class="col-md-3">
        <h3>Filtrer</h3>
        {{ form_start(form) }}
        {{ form_end(form) }}
    </div>
    <div class="col-md-9">
   
    <h3>Nos produits</h3>
    
        <div class="row product-container">
            {% for product in products %}
                <div class="col-md-4">
                    <!-- {% include 'product/single_product.html.twig' %} -->
                    <div class="product-item text-center">
                        <a href="{{ path('product', { 'slug' : product.slug })}}"><img src="/uploads/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid img-anim"></a>
                        <h5 class="mt-3">{{ product.name }}</h5>
                        <span class="product-subtitle">{{ product.subtitle }}</span>
                        <span class="product-price">{{ (product.price / 100)|number_format(2, ',', '.') }} â‚¬</span>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>    

{% endblock %}
